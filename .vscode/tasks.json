{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint",
            "type": "npm",
            "script": "lint",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Run tests",
            "type": "npm",
            "script": "test",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "label": "Run Current Test",
            "type": "shell",
            "command": "NODE_ENV=test ./node_modules/.bin/mocha",
            "args": [ "-r", "ts-node/register", "${relativeFile}" ],
            "group": "test",
            "presentation": {
                "echo": true,
                "focus": false,
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}